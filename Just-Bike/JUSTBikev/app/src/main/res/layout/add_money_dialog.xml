<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="4dp"
    android:padding="10dp"
    app:cardElevation="4dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <!--<ImageView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--android:src="@color/btn_red_bg"/>-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/amountLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/enterAmount"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Amount"
        android:textSize="20dp"
        android:textColor="@color/black"/>
            <TextView
                app:layout_constraintTop_toTopOf="@+id/amtTransfer"
                app:layout_constraintBottom_toBottomOf="@id/amtTransfer"
                app:layout_constraintRight_toLeftOf="@+id/amtTransfer"
                android:id="@+id/rupeeSymbol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â‚¹"
                android:textSize="30dp"
                android:textColor="@color/black"/>
        <EditText
            android:id="@+id/amtTransfer"
            app:layout_constraintTop_toBottomOf="@+id/enterAmount"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/enterAmount"
            android:inputType="number"
            android:textSize="50dp"
            android:textColor="@color/black"
            android:hint="0"
            android:backgroundTint="@android:color/transparent"
            android:textAlignment="center"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <FrameLayout
            android:id="@+id/debitCard"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="20dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_below="@+id/amountLayout"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/transferBtn"
                android:layout_width="260dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="30dp"

                android:layout_marginRight="30dp"
                android:background="@drawable/image_btn_onclick"
                android:textAllCaps="false"
                android:textSize="16dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:fontFamily="@font/montserrat"
                android:textColor="@color/white"
                android:text="Debit / Credit Card"
                />
        </FrameLayout>
        <FrameLayout
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/debitCard"
            android:layout_marginBottom="20dp">
            <ImageButton
                android:id="@+id/upiBtn"
                android:layout_width="260dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/date_time_btn_bg"
                android:textAllCaps="false"
                android:textSize="16dp" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/upi_logo"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:layout_marginRight="40dp"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/montserrat"
                    android:textColor="@color/black"
                    android:text="Your apps"
                    />
            </LinearLayout>
        </FrameLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
