<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent" android:layout_height="wrap_content"
  android:id="@+id/accessoryCard"
  app:cardCornerRadius="6dp"
  app:cardElevation="6dp"
  app:cardUseCompatPadding="true">
<androidx.constraintlayout.widget.ConstraintLayout
  android:layout_width="match_parent"
  android:layout_height="match_parent">
  <com.glide.slider.library.SliderLayout
    android:id="@+id/slider"
    android:layout_width="match_parent"
    app:layout_constraintCircleRadius="4dp"
    android:background="@color/white"
    android:layout_height="300dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    />
  <View
    android:id="@+id/view"
    app:layout_constraintTop_toTopOf="parent"
    android:background="#4f0e0d0f"
    android:layout_width="match_parent"
    android:layout_height="50dp"/>
  <LinearLayout
    app:layout_constraintTop_toTopOf="@+id/view"
    app:layout_constraintRight_toRightOf="@+id/view"
    app:layout_constraintBottom_toBottomOf="@+id/view"
    app:layout_constraintLeft_toLeftOf="parent"
    android:layout_width="match_parent"
    android:weightSum="2"
    android:layout_height="50dp">
  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="20dp"
    android:layout_gravity="center"
    android:layout_weight="1"
    android:id="@+id/bikationName"
    android:textColor="@color/white"
    android:layout_marginRight="4dp"
    android:layout_marginLeft="10dp"
    android:text="Name of Category"/>

    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_weight="1"
      android:weightSum="2"
      android:gravity="end"
      android:layout_height="50dp"
      android:orientation="vertical">
  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/bikationLoc"
    android:layout_weight="1"
    android:textColor="@color/white"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="4dp"
    android:gravity="end"
    android:fontFamily="@font/muli"
    android:textSize="13dp"
    android:maxLines="1"
    android:text="Location Description"/>
      <LinearLayout
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_height="wrap_content">
      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/amount"
        android:textColor="@color/white"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="4dp"
        android:gravity="center"
        android:fontFamily="@font/muli"
        android:textSize="13dp"
        android:maxLines="1"
        android:text="20,000"/>
      <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/days"
      android:textColor="@color/white"
        android:drawableLeft="@drawable/calender_tv"
        android:drawablePadding="4dp"
        android:gravity="center"
        android:layout_marginRight="10dp"
      android:layout_marginLeft="4dp"
      android:fontFamily="@font/muli"
      android:textSize="13dp"
      android:maxLines="1"
      android:text="3-4 days"/>
      </LinearLayout>
  </LinearLayout>
  </LinearLayout>
  <ImageButton
    android:id="@+id/placeDetailsBtn"
    android:layout_width="60dp"
    android:layout_height="40dp"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/image_btn_onclick"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    android:layout_margin="10dp"
    app:srcCompat="@drawable/ic_info_outline_black_24dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
