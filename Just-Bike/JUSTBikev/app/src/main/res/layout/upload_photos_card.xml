<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="4dp"

    android:padding="10dp"
    app:cardElevation="4dp">
  <LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="6dp"
        app:cardElevation="6dp"
        app:cardUseCompatPadding="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/pic"
        android:layout_width="94dp"
        android:layout_height="94dp"
        android:src="@drawable/biker"
        android:layout_marginLeft="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile Photo"
      android:fontFamily="@font/montserrat"
        app:layout_constraintTop_toTopOf="@+id/pic"
        app:layout_constraintBottom_toBottomOf="@+id/pic"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <ImageButton
        android:id="@+id/uploadBtn"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_marginRight="4dp"
        app:layout_constraintTop_toTopOf="@+id/pic"
        app:layout_constraintBottom_toBottomOf="@+id/pic"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/ic_cloud_upload_white_24dp"
        android:background="@drawable/image_btn_onclick" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="6dp"
        app:cardElevation="6dp"
        app:cardUseCompatPadding="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/aadharFront"
                android:layout_width="94dp"
                android:layout_marginLeft="4dp"
                android:layout_height="94dp"
                android:src="@drawable/aadhar_card_vector"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aadhar Front"
              android:fontFamily="@font/montserrat"
              app:layout_constraintTop_toTopOf="@+id/aadharFront"
                app:layout_constraintBottom_toBottomOf="@+id/aadharFront"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>
            <ImageButton
                android:id="@+id/uploadAadhar"

                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_marginRight="4dp"
                app:layout_constraintTop_toTopOf="@+id/aadharFront"
                app:layout_constraintBottom_toBottomOf="@+id/aadharFront"
                app:layout_constraintRight_toRightOf="parent"
                android:src="@drawable/ic_cloud_upload_white_24dp"
                android:background="@drawable/image_btn_onclick" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="6dp"
        app:cardElevation="6dp"
        app:cardUseCompatPadding="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/adharBack"
                android:layout_width="94dp"
                android:layout_height="94dp"
                android:layout_marginLeft="4dp"
                android:src="@drawable/aadhar_back"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aadhar Back"
                app:layout_constraintTop_toTopOf="@+id/adharBack"
              android:fontFamily="@font/montserrat"
              app:layout_constraintBottom_toBottomOf="@+id/adharBack"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>
            <ImageButton
                android:id="@+id/uploadAadharBack"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_marginRight="4dp"
                app:layout_constraintTop_toTopOf="@+id/adharBack"
                app:layout_constraintBottom_toBottomOf="@+id/adharBack"
                app:layout_constraintRight_toRightOf="parent"
                android:src="@drawable/ic_cloud_upload_white_24dp"
                android:background="@drawable/image_btn_onclick" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="6dp"
        app:cardElevation="6dp"
        app:cardUseCompatPadding="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/liense"
                android:layout_width="94dp"
                android:layout_marginLeft="4dp"
                android:layout_height="94dp"
                android:src="@drawable/license"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="License Front"
              android:fontFamily="@font/montserrat"
              app:layout_constraintTop_toTopOf="@+id/liense"
                app:layout_constraintBottom_toBottomOf="@+id/liense"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>
            <ImageButton
                android:id="@+id/uploadLicense"

                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_marginRight="4dp"
                app:layout_constraintTop_toTopOf="@+id/liense"
                app:layout_constraintBottom_toBottomOf="@+id/liense"
                app:layout_constraintRight_toRightOf="parent"
                android:src="@drawable/ic_cloud_upload_white_24dp"
                android:background="@drawable/image_btn_onclick" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="6dp"
        app:cardElevation="6dp"
        app:cardUseCompatPadding="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/lienseBack"
                android:layout_width="94dp"
                android:layout_height="94dp"
                android:layout_marginLeft="4dp"
                android:src="@drawable/license_back"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
              android:fontFamily="@font/montserrat"
              android:text="License Back"
                app:layout_constraintTop_toTopOf="@+id/lienseBack"
                app:layout_constraintBottom_toBottomOf="@+id/lienseBack"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>
            <ImageButton
                android:id="@+id/uploadLicenseBack"

                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_marginRight="4dp"
                app:layout_constraintTop_toTopOf="@+id/lienseBack"
                app:layout_constraintBottom_toBottomOf="@+id/lienseBack"
                app:layout_constraintRight_toRightOf="parent"
                android:src="@drawable/ic_cloud_upload_white_24dp"
                android:background="@drawable/image_btn_onclick" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
  <androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="6dp"
    app:cardElevation="6dp"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <ImageView
        android:id="@+id/additionalDoc"
        android:layout_width="94dp"
        android:layout_height="94dp"
        android:layout_marginLeft="4dp"
        android:src="@drawable/bike_assasin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Additional Doc"
        app:layout_constraintTop_toTopOf="@+id/additionalDoc"
        android:fontFamily="@font/montserrat"
        app:layout_constraintBottom_toBottomOf="@+id/additionalDoc"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
      <ImageButton
        android:id="@+id/uploadAdditionalDoc"

        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_marginRight="4dp"
        app:layout_constraintTop_toTopOf="@+id/additionalDoc"
        app:layout_constraintBottom_toBottomOf="@+id/additionalDoc"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/ic_cloud_upload_white_24dp"
        android:background="@drawable/image_btn_onclick" />

    </androidx.constraintlayout.widget.ConstraintLayout>
  </androidx.cardview.widget.CardView>
  </LinearLayout>
</ScrollView>
