<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".Franchise">
  <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="FRANCHISE"
    android:id="@+id/title"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="20dp"
    android:textSize="30dp"
    android:fontFamily="@font/montserrat"
    android:textColor="@color/colorPrimaryDark"
    />
  <TextView
    android:id="@+id/choose"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Choose Location"
    android:textSize="16dp"
    android:fontFamily="@font/montserrat"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/title"
    android:layout_marginTop="40dp"/>
  <androidx.cardview.widget.CardView
    android:id="@+id/chooseRole"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp"
    app:cardBackgroundColor="@color/white"
    app:cardUseCompatPadding="true"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/choose">

    <EditText
      android:id="@+id/locationTV"
      android:layout_width="match_parent"
      android:layout_height="60dp"
      android:hint="Town / City / State / Country / Pincode"
      android:layout_marginTop="10dp"
      android:layout_margin="10dp"
      android:textSize="14dp"
      android:backgroundTint="@color/btn_red_bg"
      android:background="@drawable/edit_text_bg"
      android:textCursorDrawable="@color/black"
      android:paddingLeft="20dp"
      android:paddingRight="20dp"
      app:layout_constraintTop_toBottomOf="@+id/pdfName"/>


  </androidx.cardview.widget.CardView>
  <FrameLayout
    android:id="@+id/btn"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="40dp"
    app:layout_constraintTop_toBottomOf="@+id/chooseRole"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent">
    <ImageView
      android:id="@+id/uploadCV"
      android:layout_width="180dp"
      android:layout_height="60dp"
      android:layout_below="@+id/rememberMeCheckBox"
      android:layout_gravity="center_horizontal"
      android:background="@drawable/image_btn_onclick"
      android:textAllCaps="false"
      android:textSize="16dp" />
    <TextView
      android:id="@+id/cv"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:textSize="16dp"
      android:fontFamily="@font/montserrat"
      android:textColor="@color/white"
      android:text="Upload CV"
      />
  </FrameLayout>
  <TextView
    android:id="@+id/pdfName"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="PDFNAME"
    android:visibility="invisible"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/btn"
    android:layout_marginTop="20dp"/>
    <EditText
      android:id="@+id/aboutYou"
      android:layout_width="match_parent"
      android:layout_height="180dp"
      android:hint="Write about yourself / Why join Just Bike [ 100 words ] . . ."
      android:layout_marginTop="10dp"
      android:layout_margin="10dp"
      android:textSize="14dp"
      android:fontFamily="@font/montserrat"
      android:backgroundTint="@color/btn_red_bg"
      android:background="@drawable/edit_text_bg"
      android:textCursorDrawable="@color/black"
      android:paddingLeft="20dp"
      android:paddingRight="20dp"
      app:layout_constraintTop_toBottomOf="@+id/pdfName"/>
  <FrameLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="40dp"
    app:layout_constraintTop_toBottomOf="@+id/aboutYou"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent">
    <ImageView
      android:id="@+id/submit"
      android:layout_width="340dp"
      android:layout_height="60dp"
      android:layout_below="@+id/rememberMeCheckBox"
      android:layout_gravity="center_horizontal"
      android:background="@drawable/image_btn_onclick"
      android:textAllCaps="false"
      android:textSize="16dp" />
    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:textSize="16dp"
      android:fontFamily="@font/montserrat"
      android:textColor="@color/white"
      android:text="Submit"
      />
  </FrameLayout>

  </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
