<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_sheet_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_prname"
        android:layout_width="match_parent"
        android:fontFamily="@font/montserrat"
        android:layout_height="wrap_content"
        android:textColor="#00000F"
        android:gravity="center"
        android:layout_margin="10dp"
        android:text="Choose Payment Method" />
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/amt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Amount : 1200"
        android:textColor="@color/black"
        android:textSize="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <CheckBox
    android:id="@+id/walletCheckBox"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/amt"
    android:text="Use Jbida Wallet"
    android:textColor="@color/black"
    android:fontFamily="@font/montserrat"
    android:checked="false"
        android:buttonTint="@color/black"
      android:layout_margin="10dp"
    android:padding="4dp"/>
    <TextView
        android:id="@+id/walletAmt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/walletCheckBox"
      app:layout_constraintBottom_toBottomOf="@+id/walletCheckBox"
        android:text="0"
      android:layout_margin="10dp"
      android:textSize="20dp"
        android:textColor="#019E1B"
        android:layout_gravity="right"
        android:gravity="center"/>
    <EditText
        android:id="@+id/couponCode"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:hint="Coupon Code"
        android:textAlignment="center"
        android:backgroundTint="@color/black"
      android:layout_margin="10dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/walletCheckBox"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <ImageButton
        android:layout_weight="1"
        android:id="@+id/couponBtn"
        android:layout_width="50dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="@id/couponCode"
      app:layout_constraintBottom_toBottomOf="@id/couponCode"
        app:layout_constraintLeft_toRightOf="@id/couponCode"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="10dp"
        app:srcCompat="@drawable/ic_local_offer_black_24dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/image_btn_onclick"
        android:textAllCaps="false"/>

    <TextView
        android:id="@+id/couponAmt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintBottom_toBottomOf="@id/couponCode"
      app:layout_constraintTop_toTopOf="@+id/couponCode"
        android:layout_marginRight="10dp"
        android:text="0"
        android:textSize="20dp"
        android:textColor="#019E1B"
        android:layout_gravity="right"
        android:gravity="center"/>


  <TextView
    android:id="@+id/deliveryCharge"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintLeft_toLeftOf="@id/couponCode"
    app:layout_constraintTop_toBottomOf="@id/couponCode"
    android:text="Delivery Charge"
    android:textColor="@color/black"
    android:padding="8dp"/>
  <TextView
    android:id="@+id/deliveryAmt"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintBottom_toBottomOf="@id/deliveryCharge"
    app:layout_constraintTop_toTopOf="@+id/deliveryCharge"
    android:layout_marginRight="10dp"
    android:text="0"
    android:textSize="20dp"
    android:textColor="@color/orange_btn"
    android:layout_gravity="right"
    android:gravity="center"/>
</androidx.constraintlayout.widget.ConstraintLayout>


  <RadioGroup
    android:orientation="horizontal"
    android:layout_marginLeft="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    >

    <RadioButton
      android:id="@+id/thirty"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:buttonTint="@color/btn_red_bg"
      android:textColor="@color/black"
      android:layout_marginRight="20dp"
      android:text="30%"/>
    <RadioButton
      android:id="@+id/hundred"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:buttonTint="@color/btn_red_bg"
      android:textColor="@color/black"
      android:layout_marginLeft="20dp"
      android:text="100%"/>
  </RadioGroup>
    <FrameLayout
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
      android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">
        <ImageButton
            android:id="@+id/upiBtn"
            android:layout_width="260dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/date_time_btn_bg"
            android:textAllCaps="false"
            android:textSize="16dp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
              android:id="@+id/upiIV"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/upi_logo"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginRight="40dp"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/montserrat"
            android:textColor="@color/black"
            android:text="Pay"
            />
        </LinearLayout>
    </FrameLayout>

  <FrameLayout
    android:layout_gravity="center"
    android:layout_margin="20dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageButton
      android:id="@+id/transferBtn"
      android:layout_width="260dp"
      android:layout_height="60dp"
      android:layout_gravity="center_horizontal"
      android:layout_marginLeft="30dp"

      android:layout_marginRight="30dp"
      android:background="@drawable/image_btn_onclick"
      android:textAllCaps="false"
      android:textSize="16dp" />
    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:textSize="20dp"
      android:fontFamily="@font/montserrat"
      android:textColor="@color/white"
      android:text="Debit / Credit Card"
      />
  </FrameLayout>

</LinearLayout>
