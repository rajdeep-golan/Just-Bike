<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@mipmap/sign_up_bg"
    tools:context=".Admin.Delivery">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/toggleNav"
            android:textSize="28dp"
            android:gravity="center"
            android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:fontFamily="@font/montserrat"
            android:text="Delivery"/>
        <ImageView
            android:id="@+id/back_ground"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:alpha="1"
            android:src="@drawable/bg_overlay"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toggleNav">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp">

                <ImageButton
                    android:id="@+id/scanAadhar"
                    android:layout_width="353dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/image_btn_onclick"
                    android:paddingRight="240dp"
                    android:textAllCaps="false"
                    android:textSize="16dp"
                    app:srcCompat="@drawable/ic_center_focus_weak_black_24dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/montserrat"
                    android:text="Scan Aadhar Card"
                    android:textColor="@color/white"
                    android:textSize="16dp" />
            </FrameLayout>

            <TextView
                android:id="@+id/aadaharDetailsTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:fontFamily="@font/montserrat"
                android:padding="6dp"
                android:text="Aadhar Details Not Found"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:visibility="gone" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <ImageButton
                    android:id="@+id/custOnBike"
                    android:layout_width="353dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/btn_white_bg"
                    android:paddingRight="240dp"
                    android:textAllCaps="false"
                    android:textSize="16dp"
                    app:srcCompat="@drawable/ic_add_a_photo_black_24dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/montserrat"
                    android:text="Customer on Bike"
                    android:textColor="@color/black"
                    android:textSize="16dp" />
            </FrameLayout>

            <ImageView
                android:id="@+id/custOnBikeImage"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:padding="6dp"
                android:src="@drawable/cbr250r"
                android:visibility="gone" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <ImageButton
                    android:id="@+id/uploadAdhar"
                    android:layout_width="353dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/btn_white_bg"
                    android:paddingRight="240dp"
                    android:textAllCaps="false"
                    android:textSize="16dp"
                    app:srcCompat="@drawable/ic_add_a_photo_black_24dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/montserrat"
                    android:text="Aadhar , License Front"
                    android:textColor="@color/black"
                    android:textSize="16dp" />
            </FrameLayout>

            <ImageView
                android:id="@+id/ALFront"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:padding="6dp"
                android:src="@drawable/cbr250r"
                android:visibility="gone" />
          <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <ImageButton
              android:id="@+id/uploadLicense"
              android:layout_width="353dp"
              android:layout_height="60dp"
              android:layout_gravity="center_horizontal"
              android:layout_marginLeft="30dp"
              android:layout_marginRight="30dp"
              android:background="@drawable/btn_white_bg"
              android:paddingRight="240dp"
              android:textAllCaps="false"
              android:textSize="16dp"
              app:srcCompat="@drawable/ic_add_a_photo_black_24dp" />

            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:fontFamily="@font/montserrat"
              android:text="Aadhar , License Back"
              android:textColor="@color/black"
              android:textSize="16dp" />
          </FrameLayout>

          <ImageView
            android:id="@+id/ALBack"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:padding="6dp"
            android:src="@drawable/cbr250r"
            android:visibility="gone" />
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <ImageButton
                    android:id="@+id/SpeedoMeterBtn"
                    android:layout_width="353dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/btn_white_bg"
                    android:paddingRight="240dp"
                    android:textAllCaps="false"
                    android:textSize="16dp"
                    app:srcCompat="@drawable/ic_add_a_photo_black_24dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/montserrat"
                    android:text="Speedometer"
                    android:textColor="@color/black"
                    android:textSize="16dp" />
            </FrameLayout>

            <ImageView
                android:id="@+id/SpeedoMeter"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:padding="6dp"
                android:src="@drawable/cbr250r"
                android:visibility="gone" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:fontFamily="@font/montserrat"
                android:gravity="center"
                android:text="Bike View"
                android:textColor="@color/white"
                android:textSize="30dp" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <ImageButton
                    android:id="@+id/front"
                    android:layout_width="353dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/btn_white_bg"
                    android:paddingRight="240dp"
                    android:textAllCaps="false"
                    android:textSize="16dp"
                    app:srcCompat="@drawable/ic_add_a_photo_black_24dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/montserrat"
                    android:text="Front"
                    android:textColor="@color/black"
                    android:textSize="16dp" />
            </FrameLayout>

            <ImageView
                android:id="@+id/frontIV"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:padding="6dp"
                android:src="@drawable/cbr250r"
                android:visibility="gone" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <ImageButton
                    android:id="@+id/back"
                    android:layout_width="353dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/btn_white_bg"
                    android:paddingRight="240dp"
                    android:textAllCaps="false"
                    android:textSize="16dp"
                    app:srcCompat="@drawable/ic_add_a_photo_black_24dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/montserrat"
                    android:text="Back"
                    android:textColor="@color/black"
                    android:textSize="16dp" />
            </FrameLayout>

            <ImageView
                android:id="@+id/backIV"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:padding="6dp"
                android:src="@drawable/cbr250r"
                android:visibility="gone" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <ImageButton
                    android:id="@+id/left"
                    android:layout_width="353dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/btn_white_bg"
                    android:paddingRight="240dp"
                    android:textAllCaps="false"
                    android:textSize="16dp"
                    app:srcCompat="@drawable/ic_add_a_photo_black_24dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/montserrat"
                    android:text="Left"
                    android:textColor="@color/black"
                    android:textSize="16dp" />
            </FrameLayout>

            <ImageView
                android:id="@+id/leftIV"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:padding="6dp"
                android:src="@drawable/cbr250r"
                android:visibility="gone" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <ImageButton
                    android:id="@+id/right"
                    android:layout_width="353dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/btn_white_bg"
                    android:paddingRight="240dp"
                    android:textAllCaps="false"
                    android:textSize="16dp"
                    app:srcCompat="@drawable/ic_add_a_photo_black_24dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/montserrat"
                    android:text="Right"
                    android:textColor="@color/black"
                    android:textSize="16dp" />
            </FrameLayout>

            <ImageView
                android:id="@+id/rightIV"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:padding="6dp"
                android:src="@drawable/cbr250r"
                android:visibility="gone" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <ImageButton
                    android:id="@+id/letterSign"
                    android:layout_width="353dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/image_btn_onclick"
                    android:paddingRight="240dp"
                    android:textAllCaps="false"
                    android:textSize="16dp"
                    app:srcCompat="@drawable/ic_add_a_photo_white_24dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/montserrat"
                    android:text="Letter Sign"
                    android:textColor="@color/white"
                    android:textSize="16dp" />
            </FrameLayout>

            <ImageView
                android:id="@+id/letterSignIV"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:padding="6dp"
                android:src="@drawable/cbr250r"
                android:visibility="gone" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <ImageButton
                    android:id="@+id/scanQr"
                    android:layout_width="353dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/image_btn_onclick"
                    android:paddingRight="240dp"
                    android:textAllCaps="false"
                    android:textSize="16dp"
                    app:srcCompat="@drawable/ic_center_focus_weak_black_24dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/montserrat"
                    android:text="Scan QR Code"
                    android:textColor="@color/white"
                    android:textSize="16dp" />
            </FrameLayout>

            <TextView
                android:id="@+id/QRCodeDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:fontFamily="@font/montserrat"
                android:padding="6dp"
                android:text="QR Details"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:visibility="gone" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <ImageButton
                    android:id="@+id/outstandingAmt"
                    android:layout_width="353dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="30dp"

                    android:layout_marginRight="30dp"
                    android:background="@drawable/btn_white_bg"
                    android:textAllCaps="false"
                    android:textSize="16dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat"
                        android:text="Outstanding Amount : ₹ "
                        android:textColor="@color/black"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/outstandingCostValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat"
                        android:text="0"
                        android:textColor="@color/black"
                        android:textSize="16dp" />
                </LinearLayout>
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <ImageButton
                    android:id="@+id/paymentMethod"
                    android:layout_width="353dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="30dp"

                    android:layout_marginRight="30dp"
                    android:background="@drawable/btn_white_bg"
                    android:textAllCaps="false"
                    android:textSize="16dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:fontFamily="@font/montserrat"
                        android:text="Payment Method"
                        android:textColor="@color/black"
                        android:textSize="16dp" />

                    <Spinner
                        android:id="@+id/paymentSpinner"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="10dp"/>
                </LinearLayout>
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="20dp">

                <ImageButton
                    android:id="@+id/finish"
                    android:layout_width="140dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/image_btn_onclick"
                    android:textAllCaps="false"
                    android:textSize="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/montserrat"
                    android:text="Finish"
                    android:textColor="@color/white"
                    android:textSize="16dp" />
            </FrameLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
