<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:id="@+id/relativeCardView">

        <ImageView
            android:id="@+id/bikeImage"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:src="@drawable/cbr250r"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mileage [in KMPL] :"
            app:layout_constraintTop_toBottomOf="@id/bikeImage"
            android:layout_marginRight="4dp"
            app:layout_constraintRight_toLeftOf="@id/mileageValue"
            android:id="@+id/mileage"
            />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20"
                android:id="@+id/mileageValue"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/bikeImage"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="COST per day:"
            app:layout_constraintRight_toLeftOf="@id/viewDocs"
            android:layout_marginRight="4dp"
            app:layout_constraintTop_toBottomOf="@id/mileage"
            android:layout_marginTop="2dp"
           android:id="@+id/name"/>
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/viewDocs"
            android:layout_height="wrap_content"
            android:text="1500"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/name"
            android:layout_marginLeft="2dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BIKE NAME"
            android:fontFamily="serif-monospace"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/phoneNo"
            android:layout_marginLeft="100dp"
            android:textSize="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="COLOUR :"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/phoneNo"
            android:id="@+id/colour"
           />
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Red - Grey"
            android:id="@+id/colourValue"
        app:layout_constraintLeft_toRightOf="@id/colour"
        app:layout_constraintTop_toTopOf="@id/colour"
        android:layout_marginLeft="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CC :"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/colour"
                android:id="@+id/cc"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="250"
            app:layout_constraintLeft_toLeftOf="@id/colourValue"
            app:layout_constraintTop_toTopOf="@id/cc"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="YEAR :"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cc"
            android:id="@+id/year"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2019"
            app:layout_constraintLeft_toLeftOf="@id/colourValue"
            app:layout_constraintTop_toTopOf="@id/year"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WT [KG] :"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/year"
            android:id="@+id/weight"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="210"
            app:layout_constraintLeft_toLeftOf="@id/colourValue"
            app:layout_constraintTop_toTopOf="@id/weight"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/weight"
            android:layout_marginLeft="40dp"
            app:layout_constraintLeft_toRightOf="@id/weight"
            android:text="Available from :"
            android:textColor="@color/colorPrimaryDark"
            android:gravity="center"
            android:id="@+id/available"
            app:layout_constraintBottom_toBottomOf="parent"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/weight"
            app:layout_constraintLeft_toRightOf="@id/available"
            android:text=" HH : MM"
            android:textColor="@color/colorAccent"
            android:layout_marginLeft="10dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
