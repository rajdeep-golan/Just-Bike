<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JbidaWallet">
    <ImageView
        android:id="@+id/jbidaLogo"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/jbida_white_logo"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="centerCrop"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wallet Amount"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="@+id/jbidaLogo"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="@color/black"
        android:padding="10dp"/>
    <TextView
        android:id="@+id/walletCost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100"
        android:textSize="18dp"
        android:fontFamily="@font/montserrat"
        android:textColor="#019E1B"
        app:layout_constraintBottom_toBottomOf="@+id/jbidaLogo"
        app:layout_constraintRight_toRightOf="parent"
        android:padding="10dp"/>


    <androidx.cardview.widget.CardView
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/walletCost"
        android:layout_width="wrap_content"
      android:layout_height="wrap_content"
        android:id="@+id/addMoney"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="50dp"
        app:cardElevation="6dp">
        <ImageView
            android:padding="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/plus_black"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/addMoneyTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Money"
        app:layout_constraintTop_toBottomOf="@+id/addMoney"
        app:layout_constraintLeft_toLeftOf="@+id/addMoney"
        app:layout_constraintRight_toRightOf="@+id/addMoney"
        android:padding="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Help Buddy"
        app:layout_constraintTop_toBottomOf="@+id/transferMoney"
        app:layout_constraintRight_toRightOf="@+id/transferMoney"
        app:layout_constraintLeft_toLeftOf="@+id/transferMoney"
        android:padding="10dp"/>
    <androidx.cardview.widget.CardView
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/walletCost"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
      android:layout_height="wrap_content"
        android:id="@+id/transferMoney"
        android:layout_marginRight="50dp"
        app:cardCornerRadius="50dp"
        app:cardElevation="6dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:src="@drawable/ic_transfer_within_a_station_black_24dp"/>
    </androidx.cardview.widget.CardView>

    <VideoView
        android:id="@+id/jbidaPromotion"
        android:layout_width="match_parent"
        android:fitsSystemWindows="true"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/addMoneyTV"/>
</androidx.constraintlayout.widget.ConstraintLayout>
