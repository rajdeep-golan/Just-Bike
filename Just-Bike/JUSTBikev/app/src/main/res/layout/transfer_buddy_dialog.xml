<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_margin="4dp"
  android:padding="10dp"
  app:cardElevation="4dp">
  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">
    <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/amountLayout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/enterAmount"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Buddy's Number"
        android:textColor="@color/black"/>
      <com.hbb20.CountryCodePicker
        android:id="@+id/countryCodePicker"
        android:layout_marginTop="20dp"
        app:ccp_autoDetectCountry="true"
        app:ccp_showFlag="true"
        app:ccp_showNameCode="true"
        app:ccp_showFullName="true"
        app:ccp_showPhoneCode="true"
        android:padding="4dp"
        app:layout_constraintTop_toBottomOf="@+id/enterAmount"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:ccp_contentColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
      <EditText
        android:id="@+id/amtTransfer"
        app:layout_constraintTop_toBottomOf="@+id/countryCodePicker"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/enterAmount"
        android:inputType="number"
        android:textSize="40dp"
        android:textColor="@color/black"
        android:cursorVisible="true"
        android:hint="Type here"
        android:backgroundTint="@android:color/transparent"
        android:textAlignment="center"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <FrameLayout
      android:id="@+id/verify"
      android:layout_marginTop="20dp"
      android:layout_marginBottom="20dp"
      android:layout_alignParentStart="true"
      android:layout_alignParentEnd="true"
      android:layout_width="wrap_content"
      android:layout_below="@+id/amountLayout"
      android:layout_height="wrap_content">
      <ImageButton
        android:id="@+id/verifyNumber"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="30dp"

        android:layout_marginRight="30dp"
        android:background="@drawable/image_btn_onclick"
        android:textAllCaps="false"
        android:textSize="16dp" />
      <TextView
        android:id="@+id/verifyTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="18dp"
        android:fontFamily="@font/montserrat"
        android:textColor="@color/white"
        android:text="Verify"
        />
    </FrameLayout>
    <TextView
      android:id="@+id/buddyName"
      android:layout_below="@+id/verify"
      android:layout_alignLeft="@+id/verify"
      android:layout_alignRight="@+id/verify"
      android:gravity="center_horizontal"
      android:layout_marginTop="10dp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Buddy Name"
      android:textSize="20dp"
      android:textColor="@color/green"/>

  </RelativeLayout>
</androidx.cardview.widget.CardView>
