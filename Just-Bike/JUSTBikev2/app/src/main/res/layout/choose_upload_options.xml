<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp"
    app:cardBackgroundColor="@color/white"
    android:layout_margin="10dp"
    android:outlineSpotShadowColor="@color/black">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        >
    <ImageView
        android:id="@+id/cameraBtn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/camera"
        android:layout_marginLeft="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
        <TextView
android:text="Camera"
            android:textSize="30dp"
            android:fontFamily="@font/open_sans_semibold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@+id/cameraBtn"
            app:layout_constraintRight_toRightOf="@id/cameraBtn"
            app:layout_constraintTop_toBottomOf="@id/cameraBtn"
            android:layout_margin="4dp"/>
        <ImageView
            android:id="@+id/fileBtn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="80dp"
            android:src="@drawable/gallery"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <TextView
            android:text="Gallery"
            android:textSize="30dp"
            android:fontFamily="@font/open_sans_semibold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@+id/fileBtn"
            app:layout_constraintRight_toRightOf="@id/fileBtn"
            app:layout_constraintTop_toBottomOf="@id/fileBtn"
            android:layout_margin="4dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
