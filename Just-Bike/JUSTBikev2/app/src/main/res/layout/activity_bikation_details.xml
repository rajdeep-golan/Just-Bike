<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@drawable/red_scooter_bg"
  tools:context=".BikationDetails">

  <ImageView
    android:id="@+id/back_ground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="1"
    android:src="@drawable/bg_overlay" />
  <ScrollView
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
  <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
  android:id="@+id/name"
  android:fontFamily="@font/muli"
  android:textSize="20dp"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:layout_marginTop="40dp"
  app:layout_constraintTop_toTopOf="parent"
  app:layout_constraintLeft_toLeftOf="parent"
  app:layout_constraintRight_toRightOf="parent"
  android:textColor="@color/white"
  android:text="Digha"/>
  <TextView
    android:id="@+id/location"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:drawableLeft="@drawable/ic_location_on_white_24dp"
    android:drawableTint="@color/btn_red_bg"
    app:layout_constraintTop_toBottomOf="@+id/name"
    android:gravity="center"
    app:layout_constraintLeft_toLeftOf="parent"
    android:textColor="@color/white"
    android:drawablePadding="4dp"
    android:text="Pura district Singhbhum"
    android:layout_margin="10dp"/>
  <TextView
    android:id="@+id/details"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:drawableLeft="@drawable/ic_baseline_info_24"
    android:drawableTint="@color/btn_red_bg"
    android:drawablePadding="4dp"
    app:layout_constraintTop_toBottomOf="@+id/location"
    app:layout_constraintLeft_toLeftOf="parent"
    android:textColor="@color/white"
    android:text="Details It is so becutiful
    that thereis noo end to it . I personally loves
    beaches , but this is a separate level of fun"
    android:layout_margin="10dp"/>
  <TextView
    android:id="@+id/timeToSpend"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:drawableLeft="@drawable/calender_tv"
    android:drawablePadding="10dp"
    app:layout_constraintTop_toBottomOf="@+id/details"
    android:gravity="center"
    app:layout_constraintLeft_toLeftOf="parent"
    android:textColor="@color/white"
    android:text="3-4 days"
    android:layout_margin="10dp"/>
  <TextView
    android:id="@+id/budget"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:drawableLeft="@drawable/ic_baseline_attach_money_24"
    android:drawableTint="@color/btn_red_bg"
    android:drawablePadding="4dp"
    android:gravity="center"
    app:layout_constraintTop_toBottomOf="@+id/timeToSpend"
    app:layout_constraintLeft_toLeftOf="parent"
    android:textColor="@color/white"
    android:text="10,000"
    android:layout_margin="10dp"/>
  <TextView
    android:id="@+id/hotel"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:drawableLeft="@drawable/ic_location_city_black_24dp"
    android:drawableTint="@color/btn_red_bg"
    android:drawablePadding="4dp"
    android:gravity="center"
    app:layout_constraintTop_toBottomOf="@+id/budget"
    app:layout_constraintLeft_toLeftOf="parent"
    android:textColor="@color/white"
    android:text="Camping"
    android:layout_margin="10dp"/>
    <TextView
      android:id="@+id/preferredVehicle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:drawableLeft="@drawable/ic_motorcycle_black_24dp"
      android:drawableTint="@color/btn_red_bg"
      android:drawablePadding="4dp"
      android:gravity="center"
      app:layout_constraintTop_toBottomOf="@+id/hotel"
      app:layout_constraintLeft_toLeftOf="parent"
      android:textColor="@color/white"
      android:text="Bikes to choose"
      android:layout_margin="10dp"/>

  <fragment
    app:layout_constraintTop_toBottomOf="@+id/preferredVehicle"
    app:layout_constraintLeft_toLeftOf="parent"
    android:layout_width="match_parent"
    android:layout_margin="10dp"
    android:layout_height="440dp"
    android:id="@+id/mapFrag"
    class="com.google.android.gms.maps.SupportMapFragment" />
    <ImageView
      android:id="@+id/transparent_image"
      android:layout_width="match_parent"
      android:layout_height="440dp"
      android:layout_margin="10dp"
      app:layout_constraintTop_toBottomOf="@+id/preferredVehicle"
      app:layout_constraintLeft_toLeftOf="parent"
      android:src="@android:color/transparent" />
    <TextView
      app:layout_constraintTop_toBottomOf="@id/mapFrag"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      android:layout_width="300dp"
      android:layout_height="wrap_content"
      android:text="GET DIRECTIONS: Click on red marker and then on above direction button "
      android:textColor="@color/white"
      android:layout_marginRight="10dp"
      android:layout_marginBottom="10dp"
      android:textSize="14dp"
      android:gravity="end"
      android:layout_gravity="end"/>
  </androidx.constraintlayout.widget.ConstraintLayout>
  </ScrollView>
</RelativeLayout>

