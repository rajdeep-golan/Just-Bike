<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp"
    app:cardUseCompatPadding="true"
    android:layout_margin="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/orderId"
            android:text="Id"
            android:fontFamily="@font/montserrat"
            android:textColor="@color/black"
          android:textSize="10dp"
          android:layout_margin="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:fontFamily="@font/montserrat"
            android:id="@+id/orderPrice"
            android:layout_height="wrap_content"
            android:text="Price"
            android:textSize="20dp"
            android:textColor="#3E3F68"
          android:layout_margin="10dp"
          app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/orderId"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/orderAddress"
            android:text="Address"
          android:textSize="12dp"
          android:fontFamily="@font/montserrat"
            android:textColor="@color/black"
            app:layout_constraintLeft_toLeftOf="@id/orderId"
            app:layout_constraintTop_toBottomOf="@id/statusIV"
            />


        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/statusIV"
            android:src="@drawable/biker"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    <LinearLayout
        android:id="@+id/btns_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        app:layout_constraintTop_toBottomOf="@+id/orderAddress"
        android:layout_marginTop="6dp"
        android:padding="6dp"
        android:orientation="horizontal">
        <ImageButton
            android:layout_weight="1"
            android:id="@+id/couponBtn"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            app:srcCompat="@drawable/ic_baseline_check_circle_outline_24"
            android:layout_marginRight="10dp"
            android:background="@drawable/image_btn_onclick"
            android:textAllCaps="false"/>
        <ImageButton
            android:layout_weight="1"
            android:id="@+id/directionBtn"
          android:layout_width="60dp"
          android:layout_height="40dp"
          android:layout_gravity="center"
          android:layout_marginLeft="10dp"
            app:srcCompat="@drawable/ic_location_on_white_24dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/image_btn_onclick"
            android:textAllCaps="false"/>
        <ImageButton
            android:layout_weight="1"
            android:id="@+id/removeBtn"
          android:layout_width="60dp"
          android:layout_height="40dp"
          android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            app:srcCompat="@drawable/ic_delete_forever_black_24dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/image_btn_onclick"
            android:textAllCaps="false"/>
        <ImageButton
            android:layout_weight="1"
            android:id="@+id/detailsBtn"
          android:layout_width="60dp"
          android:layout_height="40dp"
          android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            app:srcCompat="@drawable/ic_info_outline_black_24dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/image_btn_onclick"
            android:textAllCaps="false"/>


    </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/orderStatus"
            android:fontFamily="@font/montserrat"
            android:textColor="#019E1B"
            android:text="Staus"
            app:layout_constraintLeft_toLeftOf="@id/orderId"
            app:layout_constraintTop_toBottomOf="@id/btns_layout"
            android:layout_marginTop="4dp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
