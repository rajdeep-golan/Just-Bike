<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin.OrderNav" >
    <fragment  android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Admin.OrderNav" />`
    <FrameLayout
      app:layout_constraintBottom_toTopOf="@+id/detailsLayout"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
      android:layout_marginBottom="-20dp"
        >
        <ImageButton
            android:id="@+id/hideBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="-10dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_compare_arrows_white_24dp"
            android:background="@drawable/upload_photo_btn_bg"
            android:textAllCaps="false"

            android:textSize="16dp" />
    </FrameLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/detailsLayout"
        android:elevation="8dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
      app:layout_constraintBottom_toBottomOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/mapsBikeImage"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/cbr250r"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                <TextView
                    android:id="@+id/mapsBikeName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                  android:textSize="10dp"
                    android:fontFamily="@font/muli"
                    android:text="Name"/>
                <TextView
                    android:id="@+id/mapsEndTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                  android:textSize="10dp"
                  android:textColor="@color/black"
                    android:fontFamily="@font/muli"
                    android:text="Time"/>
                    </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/addressMap"
                    android:layout_marginLeft="4dp"
                    android:text="37,Kings Road , Howrah"/>


                </LinearLayout>


            </LinearLayout>
        <LinearLayout
            android:paddingBottom="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal">
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
              >
                <ImageButton
                    android:id="@+id/exit"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="30dp"

                    android:layout_marginRight="30dp"
                    android:background="@drawable/date_time_btn_bg"
                    android:textAllCaps="false"
                    android:textSize="16dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="16dp"
                    android:fontFamily="@font/montserrat"
                    android:textColor="@color/black"
                    android:text="Exit"
                    />
            </FrameLayout>
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"

                >
                <ImageButton
                    android:id="@+id/call"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="30dp"
                    android:src="@drawable/ic_call_black_24dp"
                    android:paddingRight="40dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/image_btn_onclick"
                    android:textAllCaps="false"
                    android:textSize="16dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="16dp"
                    android:fontFamily="@font/montserrat"
                    android:textColor="@color/white"
                    android:text="Call"
                    />
            </FrameLayout>
        </LinearLayout>
            <FrameLayout
              android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:layout_marginBottom="4dp"
                >
                <ImageButton
                    android:id="@+id/startTrip"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/image_btn_onclick"
                    android:textAllCaps="false"
                    android:textSize="16dp" />
                <TextView
                    android:id="@+id/startDone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="16dp"
                    android:fontFamily="@font/montserrat"
                    android:textColor="@color/white"
                    android:text="Start"
                    />
            </FrameLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>
